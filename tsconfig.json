{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "_build",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "_build",
    "_bundle",
    "localbuilder.ts"
	]
}